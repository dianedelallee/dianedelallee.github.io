---
import '@styles/global.css'
import Header from '@components/Header.jsx'
import Footer from '@components/Footer.astro'
import ThemeSwitcher from '@components/ThemeSwitcher.tsx'
import { SEO } from 'astro-seo';
const pathname = Astro.url.pathname;
interface Props {
	title?: string;
	description?: string;
}

const {
	title = 'Fatalement',
	description = "Diane Delall√©e's portfolio - analog photography and creative projects"
} = Astro.props;
---
<!doctype html>
<html lang="en">
	<head>
		<script is:inline is:head>
      try {
        const theme = localStorage.getItem('heroui-theme');
        if (theme === 'dark' || theme === 'light') {
          document.documentElement.classList.add(theme);
        }
      } catch (e) {
      }
    </script>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="sitemap" href="/sitemap-index.xml" />
		<link rel="icon" type="image/svg+xml" href="/favicon/favicon.ico" />
		<SEO
      title={title}
      description={description}
      charset="UTF-8"
      openGraph={{
        basic: {
          title: title,
          type: "image/jpeg",
          image: "/images/screenshot-light.webp",
        },
      }}
      extend={{
        link: [
          {
            rel: "icon",
            type: "image/png",
            sizes: "16x16",
            href: "/favicon/favicon-16*16.png",
          },
          {
            rel: "icon",
            type: "image/png",
            sizes: "32x32",
            href: "/favicon/favicon-32*32.png",
          },
          {
            rel: "apple-touch-icon",
            sizes: "180x180",
            href: "/favicon/favicon-96*96.png",
          },
          { rel: "manifest", href: "/site.webmanifest" },
          { rel: "sitemap", href: "/sitemap-index.xml" },
        ],
        meta: [
          { name: "twitter:image", content: "/images/screenshot.png" },
          { name: "twitter:title", content: title },
          { name: "twitter:description", content: description },
          { name: "viewport", content: "width=device-width" },
          { name: "msapplication-TileColor", content: "#000000" },
          { name: "theme-color", content: "#ffffff" },
          { name: "generator", content: Astro.generator },
        ],
      }}
    />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="font-gillsans bg-[#fdfaf6] dark:bg-black text-[#333] dark:text-[#fdfaf6]">
		<div id="cursor-circle"></div>
		<Header client:load pathname={pathname}>
			<ThemeSwitcher client:only />
		</Header>
		<div class="p-4 md:p-8 relative min-h-1/2">
			<slot />
		</div>
		<Footer />
		<script src="@js/cursor.ts"></script>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
