{
  "extends": "astro/tsconfigs/strict",
  "include": [
    ".astro/types.d.ts",
    "**/*"
  ],
  "exclude": [
    "dist"
  ],
  "compilerOptions": {
    "module": "ESModule",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
		"baseUrl": ".",
		"paths": {
			"@components/*": ["src/components/*"],
			"@layouts/*": ["src/layouts/*"],
			"@styles/*": ["src/styles/*"],
			"@js/*": ["src/js/*"],
			"@lib/*": ["src/lib/*"],
			"@icons/*": ["src/icons/*"]
		}
  }
}
